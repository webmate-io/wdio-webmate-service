{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "types": ["node", "@wdio/types"],

    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true

  },
  "include": [
    "src/**/*"
  ],
}
